{{log collapsed}}
{{#bs-navbar collapsed=collapsed onCollapse=(action (mut collapsed) true) onExpand=(action (mut collapsed) false) as |navbar|}}
  <div class="container">
    <div class="navbar-header">
      {{navbar.toggle}}
      {{link-to 'ember-arcgis-portal-components' 'index' class="navbar-brand"}}
    </div>
    {{#navbar.content}}
      <ul class="nav navbar-nav">
        {{#active-link}}{{link-to "Home" "index"}}{{/active-link}}
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Item Picker <span class="caret"></span></a>
          <ul class="dropdown-menu">
              {{#active-link}}{{link-to "Default Usage" "itempicker.index"}}{{/active-link}}
              {{#active-link}}{{link-to "Multi-Select" "itempicker.multiselect"}}{{/active-link}}
              {{#active-link}}{{link-to "Facets" "itempicker.facets"}}{{/active-link}}
              {{#active-link}}{{link-to "Layer Picker" "itempicker.layerpicker"}}{{/active-link}}
              {{#active-link}}{{link-to "Default Catalog" "itempicker.defaultcatalog"}}{{/active-link}}
              {{#active-link}}{{link-to "Validation" "itempicker.validation"}}{{/active-link}}
              {{#active-link}}{{link-to "Specific ID" "itempicker.specificid"}}{{/active-link}}
              {{#active-link}}{{link-to "Cross Portal" "itempicker.portalopts"}}{{/active-link}}
          </ul>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        {{#if session.isAuthenticated}}
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{session.currentUser.fullName}} <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#" {{action 'signout'}}>Sign Out</a></li>
          </ul>
        </li>
        {{else}}
        {{#active-link}}<a href="#" {{action 'signin'}}>Sign In</a>{{/active-link}}
        {{/if}}
        <li><a href="https://github.com/arcgis/ember-arcgis-portal-components">Github</a></li>
      </ul>
    {{/navbar.content}}<!--/.nav-collapse -->
  </div><!--/.container-fluid -->
{{/bs-navbar}}
<div class="container">
  {{outlet}}
</div>
