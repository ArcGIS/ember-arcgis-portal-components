{{#unless showFallback}}
  <img src="{{thumbnailUrl}}" alt="" />
{{else}}
  <img src="ember-arcgis-portal-components/assets/images/default-dataset-thumb.png" alt="" />
{{/unless}}
<h2>{{model.title}}</h2>
<h3>{{t (concat _i18nScope "sharedBy") }}: {{model.owner}}</h3>
<div class="item-picker-current-item-preview-description">
  {{sanitize-html description}}
  <div class="text-fadeout"></div>
</div>

<div class="item-picker-current-item-preview-meta">
	<div><i class="glyphicon glyphicon-calendar"></i>&nbsp;{{ format-time model.modified }}</div>
  <div><i class="glyphicon glyphicon-file"></i>{{ itemType }}</div>
</div>
