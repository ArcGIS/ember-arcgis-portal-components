{{#if showError}}
  <p class="alert {{messageClass}}" id="val-error">
    {{errorMessage.message}}
  </p>
{{/if}}
{{item-picker/item-thumbnail model=model}}
<h2>{{model.title}}</h2>
<span class="shared-by-owner">{{t (concat _i18nScope "sharedBy") }}: {{model.owner}}</span>
<div class="item-picker-current-item-preview-meta">
	<div><i class="glyphicon glyphicon-calendar"></i>{{ format-time model.modified }}</div>
  <div><i class="glyphicon glyphicon-file"></i>{{ itemType }}</div>
</div>

<div class="item-picker-current-item-preview-description">
  {{sanitize-html description}}
  <div class="text-fade"></div>
</div>

<section class="item-picker-controls">
    <div class="full-width-btn">
      <div>
      <button type="button" class="btn btn-primary btn-block {{selectButtonClass}}" {{action onItemSelected model}}>{{selectButtonText}}</button>
      </div>
    </div>
    <div class="side-by-side">
      <div>
        <button type="button" class="btn btn-default btn-block" {{action onCancel}}>{{t (concat _i18nScope "buttons.back")}}</button>
        <a href="{{previewUrl}}" target="_blank" class="btn btn-default btn-block">{{t (concat _i18nScope "buttons.preview")}}</a>
      </div>
    </div>
</section>
